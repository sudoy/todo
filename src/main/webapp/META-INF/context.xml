<?xml version="1.0" encoding="utf-8" ?>
<Context displayName="Sample Java" path="/todo" docBase="todo"
    reloadable="true" crossContext="true">
    
    <Resource name="jdbc/mysql"
        auth="Container"
        type="javax.sql.DataSource"
        username="root"
        password=""
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/todolist?useUnicode=true&amp;characterEncoding=utf8"
        maxActive="4"
        maxIdle="10"
        maxWait="5000" 
        validationQuery="SELECT count(*) FROM todos" />
